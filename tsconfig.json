{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
