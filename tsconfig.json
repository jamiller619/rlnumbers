{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2021", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noErrorTruncation": true
  },
  "exclude": ["node_modules"]
}
