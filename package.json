{
  "name": "rlnumbers",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "jest": {
    "preset": "ts-jest",
    "cacheDirectory": "./.jest-cache",
    "testEnvironment": "node"
  },
  "scripts": {
    "dx": "yarn clean && yarn copy && NODE_ENV=development node --loader ts-node/esm scripts/watch.ts",
    "test": "jest",
    "build": "yarn clean && yarn copy && yarn build:theme && DEBUG=vite-tsconfig-paths node --loader ts-node/esm --experimental-json-modules scripts/build.ts",
    "build:theme": "node --loader ts-node/esm --experimental-json-modules scripts/themes/build.ts",
    "clean": "rimraf dist/{*.cjs,*.map,*.html,assets}",
    "copy": "run-p copy:*",
    "copy:rrrocket": "node --loader ts-node/esm scripts/copy.ts ./packages/api/lib/rrrocket/bin ./dist/app/bin",
    "copy:intl": "node --loader ts-node/esm scripts/copy.ts ./packages/app/main/intl/locales ./dist/app/locales",
    "db": "run-s db:*",
    "db:clean": "rimraf ./packages/shared/db/rlnumbers.db",
    "db:gen": "yarn prisma generate --schema=./packages/api/db/schema.prisma",
    "db:push": "yarn prisma db push --schema=./packages/api/db/schema.prisma"
  },
  "devDependencies": {
    "@radix-ui/colors": "^0.1.8",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^17.0.21",
    "@types/recursive-readdir": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "chalk": "^5.0.1",
    "chokidar": "^3.5.3",
    "deepmerge": "^4.2.2",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "recursive-readdir": "^2.2.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2",
    "vite": "^3.0.2",
    "vite-tsconfig-paths": "^3.4.1"
  }
}
