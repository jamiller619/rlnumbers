{
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2022",
    "module": "es2022",
    "lib": ["es2021", "DOM"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "noErrorTruncation": true,
    "declaration": true,
    "incremental": true,
    "importHelpers": true,
    "composite": true,
    "paths": {
      "@rln/*": ["./packages/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
